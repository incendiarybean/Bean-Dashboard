{
  "name": "beanpi",
  "version": "0.1.0",
  "main": "server/index.js",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.11.8",
    "@testing-library/react": "^11.2.2",
    "@testing-library/user-event": "^12.6.0",
    "animate.css": "^4.1.1",
    "autoprefixer": "^10.1.0",
    "chart.js": "^2.9.4",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "googleapis": "^66.0.0",
    "http-proxy-middleware": "^0.19.1",
    "mongodb": "^3.6.3",
    "node-fetch": "^2.6.1",
    "node-html-parser": "^2.0.1",
    "node-wol": "^0.1.1",
    "nodemon": "^2.0.6",
    "postcss": "^8.2.2",
    "postcss-cli": "^8.3.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.1",
    "react-toastify": "^6.2.0",
    "request": "^2.88.2",
    "request-promise": "^4.2.6",
    "socket.io": "^3.0.4",
    "socket.io-client": "^3.0.4",
    "tailwindcss": "^2.0.2",
    "web-vitals": "^0.2.4",
    "winston": "^3.3.3"
  },
  "scripts": {
    "start": "npm run build && NODE_ENV=production node .",
    "start-server": "nodemon .",
    "start-dev": "react-scripts start",
    "build:css": "postcss src/App.css -o src/index.css",
    "build": "NODE_ENV=production npm run build:css &&react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/incendiarybean/BeanPi.git"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest",
      "eslint:recommended"
    ],
    "rules": {
      "quotes": [
        "error",
        "single",
        {
          "avoidEscape": true,
          "allowTemplateLiterals": true
        }
      ],
      "semi-style": [
        "error",
        "last"
      ],
      "semi": [
        "error",
        "always"
      ],
      "no-extra-semi": "error",
      "semi-spacing": [
        "error",
        {
          "before": false,
          "after": true
        }
      ],
      "no-trailing-spaces": [
        "error",
        {
          "skipBlankLines": true
        }
      ]
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
